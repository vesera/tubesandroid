<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/Widget.Design.AppBarLayout">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/Widget.AppCompat.PopupMenu" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        app:layout_anchorGravity="center">

        <ImageView
            android:id="@+id/UruhaRushia"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="607dp"
            app:srcCompat="@drawable/ic_tokino_sora" />

        <TextView
            android:id="@+id/Rushia_Text"
            android:layout_width="339dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/UruhaRushia"
            android:text="@string/RushiaText"
            android:textAlignment="gravity"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/UsadaPekora"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="87dp"
            android:layout_marginBottom="519dp"
            app:srcCompat="@drawable/ic_tokino_sora" />

        <TextView
            android:id="@+id/Pekora_Text"
            android:layout_width="339dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/Aqua_Text"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="105dp"
            android:layout_toEndOf="@+id/UsadaPekora"
            android:text="@string/PekoraText"
            android:textAlignment="gravity"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/ShiroganeNoel"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/UsadaPekora"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="87dp"
            android:layout_marginBottom="433dp"
            app:srcCompat="@drawable/ic_tokino_sora" />

        <TextView
            android:id="@+id/Noel_Text"
            android:layout_width="339dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/Pekora_Text"
            android:layout_marginStart="0dp"
            android:layout_marginTop="90dp"
            android:layout_toEndOf="@+id/ShiroganeNoel"
            android:text="@string/NoelText"
            android:textAlignment="gravity"
            android:textSize="24dp"
            app:srcCompat="@drawable/ic_tokino_sora"/>

        <ImageView
            android:id="@+id/ShiranuiFlare"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/ShiroganeNoel"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="87dp"
            android:layout_marginBottom="346dp"
            app:srcCompat="@drawable/ic_tokino_sora" />

        <TextView
            android:id="@+id/Flare_Text"
            android:layout_width="339dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/Noel_Text"
            android:layout_marginStart="0dp"
            android:layout_marginTop="85dp"
            android:layout_toEndOf="@+id/ShiranuiFlare"
            android:text="@string/FlareText"
            android:textAlignment="gravity"
            android:textSize="24dp" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
